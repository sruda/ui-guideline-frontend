{
  "name": "ui-guideline",
  "version": "1.0.0",
  "scripts": {
    "build:style": "postcss theme/tailwind.scss -o theme/base/core/utilities.scss",
    "dev": "npm run build:style && next",
    "build": "npm run build:style && next build",
    "start": "next start",
    "type-check": "tsc",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "dependencies": {
    "@sentry/browser": "5.15.5",
    "@storybook/cli": "6.0.0-alpha.21",
    "classnames": "^2.2.6",
    "mixpanel-browser": "2.36.0",
    "next": "latest",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "sass": "^1.26.5",
    "validator": "13.0.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@storybook/addon-actions": "5.3.18",
    "@storybook/addon-backgrounds": "5.3.18",
    "@storybook/addon-knobs": "5.3.18",
    "@storybook/addon-links": "5.3.18",
    "@storybook/addons": "5.3.18",
    "@storybook/react": "6.0.0-alpha.21",
    "@types/node": "14.0.3",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/validator": "13.0.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "autoprefixer": "9.8.0",
    "cssnano": "4.1.10",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "7.20.0",
    "husky": "4.2.5",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "10.2.4",
    "postcss": "7.0.30",
    "postcss-cli": "7.1.1",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "^0.0.4",
    "storybook-addon-designs": "5.2.1",
    "tailwindcss": "1.4.6",
    "typescript": "3.9.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "ISC"
}
